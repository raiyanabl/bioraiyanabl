<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/aaaa"

    >


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="353dp"
        app:srcCompat="@drawable/profil" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Raiyan Salmanabil "
        android:textColor="#333300"
        android:layout_marginTop="-30dp"
        android:textSize="29sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="A11.2020.13056"
        android:textColor="#333300"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="My hobby is playing games mobile,"
        android:textColor="#333300"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="I am a student at Dian Nuswantoro University "
        android:textColor="#333300"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Majoring in Informatics Engineering"
        android:textColor="#333300"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:onClick="openWA"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Calling/Chat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="center"
        android:backgroundTint="@color/common_google_signin_btn_text_light_focused"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="onButtonTap"
        android:text="EMAIL"
        android:backgroundTint="@color/common_google_signin_btn_text_light_focused"

        />

    <Button
        android:id="@+id/btn_location"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="ADDRESS"
        android:onClick="showMap"
        android:textAllCaps="false"
        android:backgroundTint="@color/common_google_signin_btn_text_light_focused"/>




</LinearLayout>